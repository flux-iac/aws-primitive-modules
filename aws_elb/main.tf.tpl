  access_logs = var.values.access_logs
  {{- end }}
  {{- if $.Values.connection_draining }}
  connection_draining = var.values.connection_draining
  {{- end }}
  {{- if $.Values.connection_draining_timeout }}
  connection_draining_timeout = var.values.connection_draining_timeout
  {{- end }}
  {{- if $.Values.cross_zone_load_balancing }}
  cross_zone_load_balancing = var.values.cross_zone_load_balancing
  {{- end }}
  {{- if $.Values.desync_mitigation_mode }}
  desync_mitigation_mode = var.values.desync_mitigation_mode
  {{- end }}
  {{- if $.Values.idle_timeout }}
  idle_timeout = var.values.idle_timeout
  {{- end }}
  {{- if $.Values.internal }}
  internal = var.values.internal
  {{- end }}
  {{- if $.Values.listener }}
  dynamic "listener" {
    for_each = var.values.listener[*]
    content {
      ssl_certificate_id = listener.value.ssl_certificate_id
      instance_port = listener.value.instance_port
      instance_protocol = listener.value.instance_protocol
      lb_port = listener.value.lb_port
      lb_protocol = listener.value.lb_protocol
